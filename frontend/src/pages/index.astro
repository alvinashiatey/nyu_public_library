---
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Digital Library">
  <main>
    <Header />
    <div class="exp">
      <a-scene vr-mode-ui="enabled: false">
        <a-assets>
          <img id="skyTexture" src="/pano/01.jpeg" alt="sky" />
        </a-assets>
        <a-sky src="#skyTexture"></a-sky>
        <a-text
          value="Library"
          width="6"
          position="-10.0 2.25 -1.5"
          rotation="0 30 0"></a-text>

        <!-- a white plane with 50% opacity -->
        <a-plane
          color="#fff"
          opacity="0.5"
          width="0.8"
          height="0.23"
          rotation="0 -50 -7"
          position="0.08 1.63 -1"></a-plane>
      </a-scene>
    </div>

    <footer>
      <div class="right">
        <h2 class="btn btn-white-50">You are now exploring Stack 2</h2>
      </div>
    </footer>
  </main>
</Layout>

<script>
  function toggleHypothesis() {
    const iframe = document.querySelector(
      "iframe.hypothesis__embed"
    ) as HTMLIFrameElement | null;
    const button = document.querySelector("button#toggle");
    button?.addEventListener("click", () => {
      if (!iframe) return;
      const src = iframe.src;
      if (src.includes("https://via.hypothes.is/")) {
        iframe.src = src.replace("https://via.hypothes.is/", "");
      } else {
        iframe.src = "https://via.hypothes.is/" + src;
      }
    });
  }

  window.onload = function () {
    toggleHypothesis();
  };
</script>

<style>
  main {
    margin: auto;
    width: 100svw;
    color: white;
    line-height: 1.6;
  }

  footer {
    display: flex;
    padding: 1rem;
    position: absolute;
    bottom: 1rem;
  }

  .image {
    position: absolute;
    inset: 0;
    width: 100svw;
    height: 100svh;
    z-index: -1;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
