---
import type { Book } from "@data/api";
import { Image } from "astro:assets";
const { book } = Astro.props as { book: Book };
---
<div class="book">
        <div class="image">
                {
                        book.files.map((file)=>(
                                file.type === "image" ? <Image src={file.url} alt={book.title} width=100 height=100 /> : null
                        ))
                }
        </div>

        <div class="info">
                <a href={`/book/${book.slug}`}>
                <h3>{book.title}</h3>
                </a>
        <p class="desc">
                {book.description}
        </p>
        </div>
</div>

<style>


    .book {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        
        .image {
          aspect-ratio: 1/2;
          width: 100%;
          height: 20rem;
          overflow: hidden;
          background-color: #f9f9f9;
          
          img{
                  width: 100%;
                  height: 100%;
                  object-fit: contain;
                  transition: transform 0.3s cubic-bezier(0.445, 0.05, 0.55, 0.95);
          }

          &:hover {
                img {
                        transform: scale(1.1);
                }
          }
        }
        
        .info {
                a {
                        text-decoration: none;
                        color: inherit;

                        h3 {
                              font-weight: bold;
                          margin-bottom: 0.5rem;
                        }
                }
        }

        .desc{
                display: -webkit-box;
                -webkit-box-orient: vertical;
                -webkit-line-clamp: 4;
                line-clamp: 4;
                overflow: hidden;
        }
            
    }
</style>